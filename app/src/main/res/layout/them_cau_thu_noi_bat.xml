<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".add.ThemDanhSach">


    <android.support.v7.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#2d2196">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/show_cau_thu_noi_bat"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/show" />

            <RelativeLayout

                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Thêm cầu thủ nổi bật"
                    android:textColor="#fff"
                    android:textSize="20dp" />
            </RelativeLayout>
        </LinearLayout>

    </android.support.v7.widget.Toolbar>


    <ScrollView
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:orientation="vertical">

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="50dp">

                <android.support.design.widget.TextInputEditText
                    android:id="@+id/editMaCTNB"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Mã cầu thủ:"
                    android:textSize="15dp" />
            </android.support.design.widget.TextInputLayout>


            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="20dp">

                <android.support.design.widget.TextInputEditText
                    android:id="@+id/editTenCTNB"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Tên cầu thủ:"
                    android:textSize="15dp" />
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="20dp">

                <android.support.design.widget.TextInputEditText
                    android:id="@+id/editVTCTNB"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Vị trí:"
                    android:textSize="15dp" />
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="20dp">

                <android.support.design.widget.TextInputEditText
                    android:id="@+id/editQTCTNB"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Quốc tịch:"
                    android:textSize="15dp" />
            </android.support.design.widget.TextInputLayout>


            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="20dp">

                <android.support.design.widget.TextInputEditText
                    android:id="@+id/editChiSCTNB"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Chỉ số:"
                    android:inputType="number"
                    android:textSize="15dp" />
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="20dp">

                <android.support.design.widget.TextInputEditText
                    android:id="@+id/editGiaCTNB"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Gía cầu thủ:"
                    android:inputType="number"
                    android:textSize="15dp" />
            </android.support.design.widget.TextInputLayout>


            <Button
                android:id="@+id/editChonAnhCTNB"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="Chọn ảnh"
                android:textAllCaps="false"
                android:textColor="#ef0b0b"
                android:textStyle="italic" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="30dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btThemCauThu_nb"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Thêm"
                android:textAllCaps="false"
                android:textColor="#37196e" />

            <Button
                android:id="@+id/btHuy_CTNB"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_weight="1"
                android:text="Huỷ"
                android:textAllCaps="false"
                android:textColor="#37196e" />
        </LinearLayout>


    </LinearLayout>
    </ScrollView>
</LinearLayout>